<UserControl x:Class="Dijital_Modul.Pages.UserController.MyBadges"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dijital_Modul.Pages.UserController"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">
    <Grid>
        <!--ORTA ALAN [İÇERİK]-->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1">
            <StackPanel>
                <DockPanel>
                    <Label Content="ROZETLERİM" FontFamily="Times New Roman" FontSize="50" HorizontalAlignment="Center"/>
                </DockPanel>
                
                <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" Height="800" BorderThickness="3" BorderBrush="#FFB01C1C" Foreground="{x:Null}">
                    <UniformGrid Columns="5" VerticalAlignment="Top" x:Name="unf"/>
                </ScrollViewer>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
